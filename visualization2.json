{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "title": "COVID-19 Cases per Country (23 Oct 2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/yongkangNi/FIT3179/main/covid19_23_10_Oct_2020.csv"
  },
  "params": [
    {
      "name": "Population",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": " Population: "
      }
    },
    {
      "name": "Continent",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Deaths > 0"},
    {"filter": "datum.Confirmed>0"},
    {"filter": "datum.Active>0"},
    {"filter": "datum.Population > Population"},
    {"filter": "Continent == null || datum.Continent == Continent"},
    {
      "calculate": "datum.Deaths/datum.Confirmed * 10000",
      "as": "Deaths per 10,000 Confirmed"
    }
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Total Population",
      "axis": {"tickCount": 10},
      "scale": {"type": "log", "domain": [1, 10000000000]}
    },
    "y": {
      "field": "Confirmed",
      "type": "quantitative",
      "axis": {"tickCount": 9},
      "scale": {"type": "log", "domain": [1, 10000000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Deaths per 10,000 Confirmed",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 60, 200, 500, 2000],
            "range": [10, 50, 100, 200, 400, 1000]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "Asia",
              "Oceania",
              "Europe",
              "Africa",
              "North America",
              "South America"
            ],
            "range": [
              "#feb24c",
              "#67a9cf",
              "#636363",
              "#f03b20",
              "#08519c",
              "#31a354"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.7},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Confirmed", "type": "quantitative", "format": ","},
          {"field": "Active", "type": "quantitative", "format": ","},
          {"field": "Recovered", "type": "quantitative", "format": ","},
          {
            "field": "Deaths per 10,000 Confirmed",
            "type": "quantitative",
            "format": ".0f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "dx": 20,
        "fontSize": 15,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'United Kingdom' || datum['Country'] == 'Australia' || datum['Country'] == 'India' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Confirmed", "type": "quantitative", "format": ","},
          {"field": "Active", "type": "quantitative", "format": ","},
          {"field": "Deaths", "type": "quantitative", "format": ","},
          {"field": "Recovered", "type": "quantitative", "format": ","},
          {
            "field": "Deaths per 10,000 Confirmed",
            "type": "quantitative",
            "format": ".0f"
          }
        ]
      }
    }
  ],
  "config": {}
}
