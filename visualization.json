{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Active Cases (10 15 2020)",
  "width": 900,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/yongkangNi/FIT3179/homework-week-9/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/yongkangNi/FIT3179/main/covid_10_10_2020.csv"
        },
        "key": "Country",
        "fields": ["Active", "Confirmed", "Recovered", "Deaths"]
      }
    },
    {
      "calculate": "datum.Deaths/datum.Confirmed*100",
      "as": "Death in per 100 Confirmed"
    }
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Death in per 100 Confirmed",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1, 2, 5, 10, 20],
        "range": [
          "#ffffd4",
          "#fee391",
          "#fec44f",
          "#fe9929",
          "#d95f0e",
          "#993404"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Active", "type": "quantitative"},
      {"field": "Confirmed", "type": "quantitative"},
      {"field": "Recovered", "type": "quantitative"},
      {"field": "Deaths", "type": "quantitative"}
    ]
  },
  "config": {}
}