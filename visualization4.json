    {
      "mark": {"type": "text", "radiusOffset": 40},
      "encoding": {
        "text": {"field": "value", "type": "quantitative", "format": ".0f"}
      }
    }
  ],
  "encoding": {
    "theta": {"field": "value", "type": "quantitative", "stack": true},
    "radius": {
      "field": "value",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 100}
    },
    "color": {
      "field": "key",
      "type": "nominal",
      "title": "condition",
      "scale": {
        "domain": ["Active", "Confirmed", "Deaths", "Recovered"],
        "range": ["#feb24c", "#f03b20", "#636363", "#67a9cf"]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Continent", "type": "nominal"},
      {"field": "Confirmed", "type": "quantitative", "format": ","},
      {"field": "Deaths", "type": "quantitative", "format": ","},
